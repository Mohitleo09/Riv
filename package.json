{
  "name": "rival-fullstack",
  "version": "1.0.0",
  "description": "Unified blog platform",
  "private": true,
  "scripts": {
    "dev": "docker-compose up -d && concurrently \"npm run dev:server\" \"npm run dev:frontend\"",
    "dev:server": "cross-env BACKEND_PORT=3001 nest start --watch",
    "dev:frontend": "cross-env PORT=3000 next dev",
    "build": "npm run build:server && npm run build:frontend",
    "build:server": "nest build",
    "build:frontend": "next build",
    "start:server": "node dist/main",
    "start:frontend": "next start",
    "lint": "nest lint && next lint",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push"
  },
